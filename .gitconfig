# https://sw.kovidgoyal.net/kitty/kittens/diff.html#integrating-with-git
[diff]
  tool = kitty
  guitool = kitty.gui

[difftool]
  prompt = false
  trustExitCode = true

[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
  cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[color]
	ui = auto
[cola]
	spellcheck = false
